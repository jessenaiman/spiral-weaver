{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Next.js: Start Dev Server",
      "type": "shell",
      "command": "npm",
      "args": ["run", "dev"],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "source": "ts",
        "fileLocation": [
          "relative",
          "${workspaceFolder}"
        ],
        "pattern": {
          "regexp": "\\s*(?:ERROR|WARN)\\s*(.*):(\\d+):(\\d+)\\s*-\\s*(.*)",
          "file": 1,
          "line": 2,
          "column": 3,
          "message": 4
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*compiled.*",
          "endsPattern": ".*Local:.*"
        }
      }
    },
    {
      "label": "Next.js: Build Production",
      "type": "shell",
      "command": "npm",
      "args": ["run", "build"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "Next.js: Type Check",
      "type": "shell",
      "command": "npm",
      "args": ["run", "typecheck"],
      "group": {
        "kind": "test",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "Playwright: Run All Tests",
      "type": "shell",
      "command": "npm",
      "args": ["run", "test:e2e"],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Playwright: Run Tests in UI Mode",
      "type": "shell",
      "command": "npx",
      "args": ["playwright", "test", "--ui"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Playwright: Run Current Test File",
      "type": "shell",
      "command": "npx",
      "args": ["playwright", "test", "${relativeFile}"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Playwright: Show Report",
      "type": "shell",
      "command": "npx",
      "args": ["playwright", "show-report"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Genkit: Start Dev Server",
      "type": "shell",
      "command": "npm",
      "args": ["run", "genkit:dev"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "Dev: Start All Services",
      "dependsOrder": "parallel",
      "dependsOn": [
        "Next.js: Start Dev Server",
        "Genkit: Start Dev Server"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    }
  ]
}