
generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x"]
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Story {
  id       String    @id @default(cuid())
  storyId  String    @unique
  title    String
  summary  String
  chapters Chapter[]
}

model Chapter {
  id        String  @id @default(cuid())
  chapterId String  @unique
  name      String
  synopsis  String
  metadata  String
  story     Story   @relation(fields: [storyId], references: [id])
  storyId   String
  arcs      Arc[]
}

model Arc {
  id        String   @id @default(cuid())
  arcId     String   @unique
  label     String
  theme     String
  chapter   Chapter  @relation(fields: [chapterId], references: [id])
  chapterId String
  moments   Moment[]
}

model Moment {
  id              String   @id @default(cuid())
  momentId        String   @unique
  title           String
  content         String?
  timeline        String?
  themes          String?
  lore            String?
  subtext         String?
  narrativeBeats  String
  branchingHooks  String   @default("[]")
  sensoryAnchors  String
  loreRefs        String   @default("[]")
  restrictionTags String
  arc             Arc      @relation(fields: [arcId], references: [id])
  arcId           String
}
